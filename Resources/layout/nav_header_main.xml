<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppCompat.Nav">

    <ImageView
        android:paddingTop="20dp"
        android:id="@+id/logo2"
        android:layout_width="107.5dp"
        android:layout_height="99.0dp"
        android:src="@drawable/logo_196"
        android:layout_marginBottom="0.0dp" />

    <TextView
        android:id="@+id/gtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Gallog"
        android:fontFamily="@font/zekton_regular"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zekton_regular"
        android:text="Your Galaxy Transversed!" android:textColor="@android:color/white"/>

</LinearLayout>
